<Application x:Class="StickyFinger.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:StickyFinger"             
             StartupUri="Views/FingerWindow.xaml">
    <Application.Resources>
        <ImageBrush x:Key="pointing" ImageSource="Resources/Fingers/aa_pointing.png"/>
        <ImageBrush x:Key="cursor" ImageSource="Resources/Fingers/cursor-512.png"/>
        <ImageBrush x:Key="forefinger" ImageSource="Resources/Fingers/forefinger.png"/>
        <ImageBrush x:Key="gesture" ImageSource="Resources/Fingers/gesture.png"/>
        <ImageBrush x:Key="long-arrow" ImageSource="Resources/Fingers/long-arrow.png"/>
        <ImageBrush x:Key="ok" ImageSource="Resources/Fingers/zz_ok.png"/>
        <ImageBrush x:Key="thumb-up" ImageSource="Resources/Fingers/thumb-up.png"/>
    </Application.Resources>
</Application>